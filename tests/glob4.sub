trap "rm 'a?' aa" EXIT
touch 'a?' aa

set -- a \?; IFS=\\; var=$*;
recho "$var"
unset IFS; printf "%s\n" ${var}

var='a\?'
recho "$var"
printf "%s\n" ${var}

var='a\a'
printf "%s\n" ${var}

# shell's idea of a glob pattern and libglob's idea of a glob pattern have to
# be identical
PRE='\/'
printf '<%s>\n' 'define'${PRE}'\
/'
